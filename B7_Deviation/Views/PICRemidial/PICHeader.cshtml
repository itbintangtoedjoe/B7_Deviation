				$("#mcSparepart").val(data[0].MC_SPAREPART);
				$("#mcHargaSparepart").val(data[0].MC_TOTAL_HARGA_SPAREPART);
			}, error: function (ex) {
                ErrorPIC("LoadCostDisposisi", JSON.stringify(ex));
			}
		});
	}

